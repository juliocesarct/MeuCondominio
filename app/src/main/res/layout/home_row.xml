<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
            android:id="@+id/tvUser"
            android:layout_width="0dp"
            android:layout_height="21dp"
            android:text="UserName"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toEndOf="@+id/tvUsr"
            android:layout_marginStart="8dp"/>
    <TextView
            android:id="@+id/tvTitleNews"
            android:layout_width="282dp"
            android:layout_height="30dp"
            android:text="NewsTtitle"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tvUsr" android:textSize="@dimen/titles"
            android:textColor="@color/color1"
            app:layout_constraintStart_toEndOf="@+id/tvTlt" android:layout_marginStart="8dp"/>
    <TextView
            android:id="@+id/tvDescription"
            android:layout_width="0dp"
            android:layout_height="@dimen/field_height"
            android:layout_marginEnd="8dp"
            android:text="DescriptionText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tvTlt2" android:layout_marginBottom="12dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:text="@string/Publisher"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tvUsr"
            android:textColor="@color/color2"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
    />
    <TextView
            android:text="Title:"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:id="@+id/tvTlt"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="@color/color2"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tvUsr" android:textSize="@dimen/titles"
            android:textAlignment="viewStart"
            android:layout_marginStart="8dp"
    />
    <TextView
            android:text="Description:"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tvTlt2" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:textColor="@color/color2"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/tvTlt"
    />
    <ImageView
            android:layout_width="408dp"
            android:layout_height="1dp" app:srcCompat="@color/color2"
            android:id="@+id/ivLine"
            tools:layout_editor_absoluteY="0dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
            android:layout_width="24dp"
            android:layout_height="wrap_content" app:srcCompat="?attr/actionModeShareDrawable"
            android:id="@+id/ivShare"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tvUser" app:layout_constraintStart_toEndOf="@+id/tvTitleNews"
            android:layout_marginStart="8dp"/>
</android.support.constraint.ConstraintLayout>