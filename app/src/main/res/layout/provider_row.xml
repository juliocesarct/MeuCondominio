<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ImageView
            android:layout_width="0dp"
            android:layout_height="1dp" app:srcCompat="@color/color2"
            android:id="@+id/ivLine"
            android:layout_marginBottom="11dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/tvLbUsrAddedP"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="1dp" android:layout_marginEnd="1dp"
    />
    <TextView
            android:id="@+id/tvUserAddedP"
            android:layout_width="0dp"
            android:layout_height="18dp"
            android:text="User Name"
            android:layout_marginTop="11dp"
            app:layout_constraintTop_toBottomOf="@+id/ivLine" app:layout_constraintStart_toEndOf="@+id/tvLbUsrAddedP"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="9dp"
            app:layout_constraintBottom_toTopOf="@+id/tvTitleProvider" android:layout_marginEnd="66dp"
    />
    <TextView
            android:id="@+id/tvTitleProvider"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:text="Provider Title"
            android:textSize="@dimen/titles"
            android:textColor="@color/color1"
            android:layout_marginTop="38dp"
            app:layout_constraintTop_toBottomOf="@+id/ivLine" app:layout_constraintStart_toEndOf="@+id/tvLbTltProvider"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="38dp"
            app:layout_constraintBottom_toTopOf="@+id/tvLbDescProviderTitle" android:layout_marginEnd="42dp"
    />
    <TextView
            android:text="@string/Publisher"
            android:layout_width="80dp"
            android:layout_height="19dp"
            android:id="@+id/tvLbUsrAddedP"
            android:textColor="@color/color2"
            app:layout_constraintTop_toBottomOf="@+id/ivLine" app:layout_constraintEnd_toStartOf="@+id/tvUserAddedP"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/tvLbTltProvider"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginEnd="16dp"/>
    <TextView
            android:text="Title:"
            android:layout_width="69dp"
            android:layout_height="29dp"
            android:id="@+id/tvLbTltProvider"
            android:textColor="@color/color2"
            android:textSize="@dimen/titles"
            android:textAlignment="viewStart"
            app:layout_constraintTop_toBottomOf="@+id/tvLbUsrAddedP"
            app:layout_constraintEnd_toStartOf="@+id/tvTitleProvider" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/tvLbProviderPhone" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginEnd="18dp"
    />
    <TextView
            android:text="Description:"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tvLbDescProviderTitle"
            android:textColor="@color/color2"
            app:layout_constraintTop_toBottomOf="@+id/tvLbProviderPhone" android:layout_marginBottom="7dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/tvDescProvider"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="7dp" android:layout_marginEnd="7dp"/>
    <TextView
            android:id="@+id/tvDescProvider"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="DescriptionText"
            app:layout_constraintTop_toBottomOf="@+id/tvLbDescProviderTitle"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp"/>
    <TextView
            android:text="Phone:"
            android:layout_width="54dp"
            android:layout_height="20dp"
            android:id="@+id/tvLbProviderPhone"
            android:textColor="@color/color2"
            app:layout_constraintTop_toBottomOf="@+id/tvLbTltProvider"
            app:layout_constraintEnd_toStartOf="@+id/tvProviderPhone" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/tvLbDescProviderTitle"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginEnd="19dp"/>
    <TextView
            android:id="@+id/tvProviderPhone"
            android:layout_width="0dp"
            android:layout_height="19dp"
            android:text="Phone"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/tvTitleProvider"
            app:layout_constraintStart_toEndOf="@+id/tvLbProviderPhone" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="9dp" app:layout_constraintBottom_toTopOf="@+id/tvLbDescProviderTitle"
            android:layout_marginEnd="183dp" android:inputType="phone"/>
</android.support.constraint.ConstraintLayout>