<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <Button
            android:layout_width="@dimen/Icons"
            android:layout_height="@dimen/Icons" android:id="@+id/btSchool"
            android:background="@drawable/ic_school_icon"
            app:layout_constraintTop_toBottomOf="@+id/tvPoi" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="50dp" android:layout_marginEnd="50dp"/>
    <TextView
            android:text="@string/title_poi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvPoi"
            android:textSize="@dimen/titles"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="50dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"/>
    <Button
            android:layout_width="@dimen/Icons"
            android:layout_height="@dimen/Icons"
            android:id="@+id/btGym" android:background="@drawable/ic_gym_icon"
            app:layout_constraintTop_toBottomOf="@+id/btHospital" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="50dp" android:layout_marginStart="50dp"
    />
    <Button
            android:layout_width="@dimen/Icons"
            android:layout_height="@dimen/Icons"
            android:id="@+id/btRestaurant"
            android:background="@drawable/ic_restaurant_icon"
            app:layout_constraintTop_toBottomOf="@+id/btSchool" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="50dp" android:layout_marginTop="50dp"/>
    <Button
            android:text="."
            android:layout_width="@dimen/Icons"
            android:layout_height="@dimen/Icons"
            android:id="@+id/btHospital"
            android:background="@drawable/ic_big_hospital_icon"
            app:layout_constraintTop_toBottomOf="@+id/tvPoi" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="50dp"
            android:layout_marginTop="50dp"/>

</android.support.constraint.ConstraintLayout>