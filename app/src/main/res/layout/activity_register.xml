<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RegisterActivity">

    <EditText
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/etName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/tvAddTitle"
            android:layout_marginBottom="12dp" app:layout_constraintBottom_toTopOf="@+id/tvPhone"
            android:layout_marginStart="12dp" android:layout_marginEnd="12dp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/etEmail"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/tvEmail"
            android:layout_marginBottom="12dp" app:layout_constraintBottom_toTopOf="@+id/tvAddTitle"
            android:layout_marginStart="12dp" android:layout_marginEnd="12dp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/etPhone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/tvPhone"
            android:layout_marginBottom="10dp" app:layout_constraintBottom_toTopOf="@+id/tvUnity"
            android:layout_marginStart="12dp" android:layout_marginEnd="12dp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/etUnity"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/tvUnity"
            android:layout_marginBottom="29dp" app:layout_constraintBottom_toTopOf="@+id/tvPassword"
            android:layout_marginStart="12dp" android:layout_marginEnd="12dp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:ems="10"
            android:id="@+id/etPassword"
            android:inputType="textPassword"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvPassword" android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toTopOf="@+id/btConfirm" android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"/>
    <Button
            android:text="@string/confirm"
            android:layout_width="313dp"
            android:layout_height="0dp"
            android:id="@+id/btConfirm"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etPassword" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/btCancel"/>
    <Button
            android:text="Cancel"
            android:layout_width="313dp"
            android:layout_height="0dp"
            android:id="@+id/btCancel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btConfirm" android:layout_marginBottom="63dp"/>
    <TextView
            android:text="@string/prompt_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tvAddTitle"
            android:textSize="@dimen/texts"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etEmail" android:layout_marginBottom="7dp"
            app:layout_constraintBottom_toTopOf="@+id/etName" android:layout_marginEnd="12dp"
            android:layout_marginStart="12dp"/>
    <TextView
            android:text="@string/prompt_email"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tvEmail"
            android:textSize="@dimen/texts" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="75dp" android:layout_marginBottom="7dp"
            app:layout_constraintBottom_toTopOf="@+id/etEmail"
            app:layout_constraintVertical_chainStyle="spread_inside" android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"/>
    <TextView
            android:text="@string/prompt_phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tvPhone"
            android:textSize="@dimen/texts" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etName" android:layout_marginBottom="7dp"
            app:layout_constraintBottom_toTopOf="@+id/etPhone" android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"/>
    <TextView
            android:text="@string/prompt_apartment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tvUnity"
            android:textSize="@dimen/texts"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etPhone" android:layout_marginBottom="7dp"
            app:layout_constraintBottom_toTopOf="@+id/etUnity" android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"/>
    <TextView
            android:text="@string/prompt_password"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tvPassword"
            android:textSize="@dimen/texts"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etUnity" android:layout_marginBottom="3dp"
            app:layout_constraintBottom_toTopOf="@+id/etPassword" android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"/>
    <TextView
            android:text="Profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvTitleNews"
            android:textStyle="bold" android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"/>
</android.support.constraint.ConstraintLayout>